@model Laptop 

@if(Model==null)
{
	<div>
		<p>Wrong input!Try again</p>
	</div>
}
else
{
	<div class="form-container">
		<form asp-action="Edit" asp-controller="Home" asp-route-id="@Model.Id" asp-href-include="true">
			<div class="form-group">
				<label asp-for="@Model.Name">Enter new name:</label>
				<input asp-for="@Model.Name" value="@Model.Name" type="text">
			</div>

			<div class="form-group">
				<label asp-for="@Model.Brand"></label>
				<select asp-for="@Model.Brand" asp-items="Html.GetEnumSelectList<LaptopBrand>()">
					<option selected="selected">Бренд</option>
				</select>
			</div>

			<div class="form-group">
				<label asp-for="@Model.Description">Enter new description:</label>
				<textarea asp-for="@Model.Description">@Model.Description</textarea>
			</div>

			<div class="form-group">
				<label asp-for="@Model.Threads">Enter new threads:</label>
				<input asp-for="@Model.Threads" value="@Model.Threads" type="number">
			</div>

			<div class="form-group">
				<label asp-for="@Model.RAM">Enter new RAM:</label>
				<input asp-for="@Model.RAM" value="@Model.RAM" type="number">
			</div>

			<div class="form-group">
				<label asp-for="@Model.ScreenSize">Enter new screensize:</label>
				<input asp-for="@Model.ScreenSize" value="@Model.ScreenSize" type="number">
			</div>

			<button type="submit" class="btn btn-primary">Save Changes</button>
		</form>
	</div>
}